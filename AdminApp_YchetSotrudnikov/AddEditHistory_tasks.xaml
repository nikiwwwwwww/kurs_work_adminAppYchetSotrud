<Window x:Class="AdminApp_YchetSotrudnikov.AddEditHistory_tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp_YchetSotrudnikov"
        mc:Ignorable="d"
        Title="AddEditHistory_tasks" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Задача" Margin="10,10,10,10"/>
        <ComboBox x:Name="cb_Tasks" Grid.Column="1" Margin="10,10,10,10"/>

        <Label Content="Выполнено" Margin="10,10,10,10" Grid.Row="1"/>
        <CheckBox x:Name="CheckBox_Completed" Grid.Column="1" Margin="10,10,10,10" Grid.Row="1"/>

        <Label Content="Вовремя" Margin="10,10,10,10" Grid.Row="2"/>
        <CheckBox x:Name="CheckBox_OnTime" Grid.Column="1" Margin="10,10,10,10" Grid.Row="2"/>

        <Button Grid.Row="3" Grid.Column="1" Content="Сохранить" Margin="43,23,467,40" Click="Button_Save_Click"/>
    </Grid>
</Window>
